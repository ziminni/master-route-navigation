/* Main Window Styling */
#mainWindow {
    background-color: #f5f5f5;
}

/* Grades Widget Styling */
#gradesWidget {
    background-color: white;
    border-radius: 8px;
    margin: 20px;
}

/* Header Frame Styling */
#headerFrame {
    background-color: white;
    border-bottom: 1px solid #e0e0e0;
    font: Poppins;
}

/* Title Label Styling */
#titleLabel {
    font-size: 24px;
    font-weight: bold;
    color: #2c5530;
    margin-bottom: 0px;
}

/* Tab Button Styling */
QPushButton#tabButton {
    background-color: transparent;
    border: none;
    border-bottom: 3px solid transparent;
    padding: 10px 20px;
    font-size: 12px;
    font-weight: 600;
    color: #666666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

QPushButton#tabButton:hover {
    color: #2c5530;
}

QPushButton#tabButton[active="true"] {
    color: #2c5530;
    border-bottom: 3px solid #f39c12;
    background-color: #f8f9fa;
}

/* Semester Combo Box Styling */
#semesterCombo {
    background-color: white;
    border: 1px solid #d0d7de;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 13px;
    color: #333333;
    min-width: 180px;
}

#semesterCombo::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px;
    border-left: none;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
}

#semesterCombo::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #666666;
    width: 0px;
    height: 0px;
}

#semesterCombo QAbstractItemView {
    border: 1px solid #d0d7de;
    border-radius: 6px;
    background-color: white;
    selection-background-color: #2c5530;
    selection-color: white;
    outline: none;
    padding: 4px;
}

#semesterCombo QAbstractItemView::item {
    padding: 8px 12px;
    border-radius: 4px;
    color: #333333;
}

#semesterCombo QAbstractItemView::item:hover {
    background-color: #2c5530;
    color: white;
}

#semesterCombo QAbstractItemView::item:selected {
    background-color: #2c5530;
    color: white;
}

/* Grades Table Styling */
#gradesTable {
    background-color: white;
    border: 1px solid #e1e4e8;
    border-radius: 6px;
    gridline-color: #e1e4e8;
    font-size: 12px;
    margin: 20px;
}

/* Table Header Styling */
#gradesTable QHeaderView::section {
    background-color: #2c5530;
    color: white;
    font-weight: bold;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 12px 8px;
    border: none;
    border-right: 1px solid #1e3a23;
}

#gradesTable QHeaderView::section:last {
    border-right: none;
}

/* Table Cell Styling */
#gradesTable::item {
    font-size: 12px;
    color: #000000;   /* default black text */
    padding: 4px;
    border-bottom: 1px solid #f0f0f0;
}

/* Alternating Row Colors */
#gradesTable::item:alternate {
    background-color: #fafbfc;
}


#gradesTable QTableWidgetItem[data-status="FAILED"] {
    color: #ff0000;      /* ðŸ”´ red text */
    font-weight: bold;
}


/* Table Focus Styling */
#gradesTable:focus {
    border: 2px solid #1a472a;
}

/* Scrollbar Styling */
#gradesTable QScrollBar:vertical {
    background-color: #f3f4f6;
    width: 8px;
    border-radius: 4px;
}

#gradesTable QScrollBar::handle:vertical {
    background-color: #9ca3af;
    border-radius: 4px;
    min-height: 20px;
}

#gradesTable QScrollBar::handle:vertical:hover {
    background-color: #6b7280;
}

#gradesTable QScrollBar::add-line:vertical,
#gradesTable QScrollBar::sub-line:vertical {
    height: 0px;
}

/* Horizontal Scrollbar */
#gradesTable QScrollBar:horizontal {
    background-color: #f3f4f6;
    height: 8px;
    border-radius: 4px;
}

#gradesTable QScrollBar::handle:horizontal {
    background-color: #9ca3af;
    border-radius: 4px;
    min-width: 20px;
}

#gradesTable QScrollBar::handle:horizontal:hover {
    background-color: #6b7280;
}

#gradesTable QScrollBar::add-line:horizontal,
#gradesTable QScrollBar::sub-line:horizontal {
    width: 0px;
}

#hamburgerIcon{
    color: #155724;
    font-size: 22px;
}

/* Degree Progress Widget Styling */
#degreeProgressWidget {
    background-color: white;
    border-radius: 8px;
}

/* Degree Progress Table Styling */
#degreeProgressTable {
